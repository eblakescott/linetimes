<h1>Listing museums</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Image url</th>
    <th>Description</th>
    <th>Wait time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @museums.each do |museum| %>
  <tr>
    <td><%= museum.title %></td>
    <td><%= museum.image_url %></td>
    <td><%= museum.description %></td>
    <td><%= museum.wait_time %></td>
    <td><%= link_to 'Show', museum %></td>
    <td><%= link_to 'Edit', edit_museum_path(museum) %></td>
    <td><%= link_to 'Destroy', museum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

